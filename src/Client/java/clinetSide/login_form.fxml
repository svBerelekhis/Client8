<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<FlowPane alignment="CENTER" hgap="30.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="405.0" minWidth="720.0" orientation="VERTICAL" prefHeight="540.0" prefWidth="960.0" vgap="25.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginFormController">
    <children>
        <Label alignment="CENTER" prefHeight="27.0" prefWidth="551.0" text="%key.login.welcome">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <GridPane alignment="CENTER" vgap="15.0">
            <children>
                <Label text="%key.login.email" />
                <TextField fx:id="loginField" GridPane.columnIndex="1" />
                <Label text="%key.login.password" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
        <HBox prefHeight="38.0" prefWidth="526.0" spacing="15.0">
            <children>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="37.0" prefWidth="183.0" text="%key.login.loginBtn" textFill="#007bff">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="registerButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleRegisterButtonAction" prefHeight="37.0" prefWidth="183.0" text="%key.login.registerBtn" textFill="#1e9728">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</FlowPane>
